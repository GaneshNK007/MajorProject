<script>
    const mapToken="<%= process.env.MAP_TOKEN %>";
    const listing= <%-JSON.stringify(listing)%>;
</script>    
    <div class="row mt-3">
        <div class="col-8 offset-3">
          <h1><%= listing.title %></h1>
        </div>  
    <div class="card col-6 offset-3 show-card listing-card">
        <img 
        src="<%= listing.image.url %>" 
        class="card-img-top show-img"
        alt="listing_image">
        <div class="card-body">
            <!-- <b><%= listing.title %></b><br> -->
            <p><i><%=listing.owner ? `Posted by: ${listing.owner.username}` : 'Posted by: Unknown' %><br></i></p>
           <p><%= listing.description %><br></p>
        <p>Price: &#8377;<%= listing.price.toLocaleString('en-IN') %><br></p>
           <p>Location: <%= listing.location %><br></p>
          <p>Country: <%= listing.country %></p>
        
    </div>
    </div>
     </div>
     <% if(currentUser && currentUser._id.equals(listing.owner._id)){ %>
      <div class="btns">
        <!-- <a href="/listings" class="btn btn-dark col-1 offset-2">Back to Listings</a><br><br> -->
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary col-1 offset-3 edit-btn action-btn">Edit</a><br><br>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display:inline;">
        <button type="submit" class="btn btn-dark  offset-5 ">Delete</button>
    </form>
    <% } %>
    </div>
    <div class="col-8 offset-3 mb-3 ">
        <hr>
         <% if(currentUser){ %>
        <h4>Leave a review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <!-- <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating:</label><br>
                 <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5" required>
            </div> -->
            <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating:</label><br>
            <fieldset class="starability-slot">
                <!-- <legend>Rate this place</legend> -->
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />

                <input type="radio" id="rate1" name="review[rating]" value="1">
                <label for="rate1" title="Terrible">1 star</label>

                <input type="radio" id="rate2" name="review[rating]" value="2">
                <label for="rate2" title="Not good">2 stars</label>

                <input type="radio" id="rate3" name="review[rating]" value="3">
                <label for="rate3" title="Average">3 stars</label>

                <input type="radio" id="rate4" name="review[rating]" value="4">
                <label for="rate4" title="Very good">4 stars</label>

                <input type="radio" id="rate5" name="review[rating]" value="5">
                <label for="rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
        <!-- THIS is what Express reads -->
        <!-- <input type="hidden" id="ratingValue" name="review[rating]" required> -->

            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment:</label><br>
                <textarea id="comment" name="review[comment]" rows="4" cols="50" class="form-control" required></textarea>
                 <div class="invalid-feedback">Please add some comments in review</div>
            </div>
            <button type="submit" class="btn btn-outline-dark mt-2">Submit</button>
            <hr>
        </form>
        <% } %>
        
       <% if(listing.reviews.length > 0){ %>
        <div class="row">
            <p>Reviews</p>
         <% listing.reviews.forEach(review => { %>
           <div class="card mb-3 review-card ms-3 col-5">
            <div class="card-body">
                <h5 class="card-title">@<%= review.author ? review.author.username : 'Unknown' %></h5>
                                  <p class="starability-result " data-rating="<%= review.rating %>">Rated: <%= review.rating %> stars</p>
                <p class="card-text"><%= review.comment %></p>
            </div>
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button type="submit" class="btn btn-dark btn-sm">Delete</button>
            </form>
           </div>
        <% }); %>
        </div> 
        <% } else { %>
            <p>No reviews yet. Be the first to review!</p>
        <% } %> 
        <hr>
    </div>
    <div class="col-8 offset-3 mb-3 ">
                <h3>Where You'll Be</h3>
                <div id="map"></div>
    </div> 

    <script src="/js/map.js"></script>
   