<% layout("layouts/boilerplate")%>

<style>
#filters {
    display: flex;
    gap: 1rem;
    /* margin-top: 2rem; */
}

.filter {
    text-align: center;
    margin-right: 1rem;
    margin-top: 2rem;
    opacity: 0.7;
}

.filter:hover {
    opacity: 1;
    cursor: pointer;
}

.filter p{
    font-size: 0.8rem;
}

.tax-info{
    display:none;
}

.tax-toggle{
    margin-left: auto;
    margin-top: 2rem;
}

</style>
    
    <div id="filters">
        <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
        </div>

        <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
        </div>
         <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
        </div>
        
        <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
        </div>
         <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
        </div>
        
        <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pool</p>
        </div>
        <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
        </div>
         <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
        </div>
        
        <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
        </div>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>

    </div>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% allListings.forEach(function(listing) { %>
            <a href="/listings/<%= listing._id%>" class="listing-link">
    <div class="card listing-card" >
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
        <div class="card-body">
            <p class="card-text">
               <b> <%= listing.title %> </b><br>
                <%= listing.description %><br>
                <span class="price" data-price="<%= listing.price %>">
                     &#8377;<%= listing.price.toLocaleString('en-IN') %>
                </span>
            <i class="tax-info"></i>
            </p>
        </div>
    </div>
    </a>
    <% }); %>

</div>

<script>
    let taxSwitch = document.getElementById('flexSwitchCheckDefault');

    taxSwitch.addEventListener('change', function () {
        let priceElements = document.querySelectorAll('.price');

        priceElements.forEach(function (priceEl) {
            let originalPrice = parseInt(priceEl.dataset.price);
            let taxInfo = priceEl.closest('.card-text').querySelector('.tax-info');

            if (taxSwitch.checked) {
                let taxedPrice = Math.round(originalPrice * 1.18);
                priceEl.innerHTML =
                    '₹' + taxedPrice.toLocaleString('en-IN') + ' (incl. taxes)';
                taxInfo.style.display = "inline";
            } else {
                priceEl.innerHTML =
                    '₹' + originalPrice.toLocaleString('en-IN');
                taxInfo.style.display = "none";   // ✅ DISAPPEARS
            }
        });
    });
</script>
